<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>$(TargetFrameworkPrefix)-macos</TargetFramework>
    <TargetPlatformVersion>15.0</TargetPlatformVersion>
    <RuntimeIdentifier>osx-arm64</RuntimeIdentifier>
    <IsDeploymentTarget>true</IsDeploymentTarget>

    <AppendTargetFrameworkToOutputPath>false</AppendTargetFrameworkToOutputPath>
    <UseAppHost>true</UseAppHost>

    <CreateAppBundle>true</CreateAppBundle>
    <ApplicationId>com.sylinko.everywhere</ApplicationId>
    <ApplicationDisplayVersion>1.0</ApplicationDisplayVersion>
    <ApplicationVersion>1</ApplicationVersion>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Avalonia.Desktop"/>
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\Everywhere\Everywhere.csproj"/>
  </ItemGroup>

  <ItemGroup>
    <None Include="..\..\img\Everywhere.ico">
      <Link>Everywhere.ico</Link>
    </None>
    <Content Include="$(WatchdogExecutable)">
      <Link>Everywhere.Watchdog</Link>
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
      <CopyToPublishDirectory>PreserveNewest</CopyToPublishDirectory>
    </Content>
  </ItemGroup>

  <Import Project="..\Build.Watchdog.targets" />

  <Target Name="AdHocSign" AfterTargets="Build">
    <PropertyGroup>
      <AppBundlePath>$(OutputPath)$(ProjectName).app</AppBundlePath>
    </PropertyGroup>
    
    <Exec Command="codesign --force --deep --sign - &quot;$(AppBundlePath)&quot;" />
  </Target>

</Project>
