<ResourceDictionary
  xmlns="https://github.com/avaloniaui" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:configuration="clr-namespace:Everywhere.Views.Configuration" xmlns:shadui="clr-namespace:ShadUI.Controls;assembly=ShadUI">

  <ControlTheme
    x:Key="{x:Type configuration:RestartAsAdministratorControl}"
    TargetType="configuration:RestartAsAdministratorControl">

    <Setter Property="Template">
      <ControlTemplate>
        <Button
          Classes="Outline" HorizontalAlignment="Left"
          shadui:ButtonAssist.Icon="{LucideIconContent Shield}"
          shadui:ButtonAssist.IconSize="18"
          Command="{Binding RestartAsAdministratorCommand, RelativeSource={RelativeSource TemplatedParent}}"
          Content="{I18N {x:Static LocaleKey.CommonSettings_RestartAsAdministrator_Button_Content}}"/>
      </ControlTemplate>
    </Setter>
  </ControlTheme>
</ResourceDictionary>