<ResourceDictionary
  xmlns="https://github.com/avaloniaui" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:configuration="clr-namespace:Everywhere.Views.Configuration" xmlns:shadui="clr-namespace:ShadUI.Controls;assembly=ShadUI">

  <ControlTheme
    x:Key="{x:Type configuration:DebugFeaturesControl}"
    TargetType="configuration:DebugFeaturesControl">

    <Setter Property="Template">
      <ControlTemplate>
        <StackPanel Orientation="Horizontal" Spacing="8">
          <Button
            Classes="Outline" HorizontalAlignment="Left"
            shadui:ButtonAssist.Icon="{LucideIconContent FileJson2}"
            shadui:ButtonAssist.IconSize="18"
            Command="{Binding EditSettingsFileCommand, RelativeSource={RelativeSource TemplatedParent}}"
            Content="{I18N {x:Static LocaleKey.CommonSettings_EditSettingsFile_Button_Content}}"/>
          <Button
            Classes="Outline" HorizontalAlignment="Left"
            shadui:ButtonAssist.Icon="{LucideIconContent FolderOpen}"
            shadui:ButtonAssist.IconSize="18"
            Command="{Binding OpenLogsFolderCommand, RelativeSource={RelativeSource TemplatedParent}}"
            Content="{I18N {x:Static LocaleKey.CommonSettings_OpenLogsFolder_Button_Content}}"/>
        </StackPanel>
      </ControlTemplate>
    </Setter>
  </ControlTheme>
</ResourceDictionary>
